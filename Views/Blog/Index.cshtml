@model IEnumerable<MVC_Website.Models.BlogPost>
@{
    ViewData["Title"] = "Blogpost";
}

<h1>Fru Hverdag</h1>

@if (Model != null && Model.Any())
{
    <ul>
        @foreach (var post in Model)
        {
            <li>
                <h2>@post.Title</h2>
                <p>@post.Content</p>
            </li>
        }
    </ul>
}
else
{
    <p>Blog posts are missing!</p>
}